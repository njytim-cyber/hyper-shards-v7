{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Hyper Shards",
  "version": "1.0.0",
  "identifier": "com.hypershards.game",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Hyper Shards",
        "width": 1280,
        "height": 720,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'wasm-unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; media-src 'self'; connect-src 'self' https://*.supabase.co wss://*.supabase.co"
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "msi",
      "nsis",
      "deb",
      "rpm",
      "appimage",
      "dmg"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Game",
    "shortDescription": "A fast-paced arcade space shooter with pilot classes and multiplayer",
    "longDescription": "Hyper Shards is an intense arcade space shooter featuring 15 campaign levels, 5 unique pilot classes with skill trees, 7 epic boss battles, co-op and versus multiplayer modes, and endless replayability.",
    "copyright": "Â© 2024 Hyper Shards",
    "windows": {
      "wix": null,
      "nsis": {
        "displayLanguageSelector": true
      }
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.13"
    }
  },
  "plugins": {
    "log": {
      "level": "info"
    }
  }
}